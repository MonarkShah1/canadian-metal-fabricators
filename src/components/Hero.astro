---
import Button from './ui/Button.astro';
---

<section class="relative w-full min-h-screen flex items-center overflow-hidden bg-slate-950 py-20 lg:py-0">
  
  <!-- SEO: Background Grid (Lightweight SVG) -->
  <div class="absolute inset-0 z-0 opacity-[0.15] pointer-events-none">
     <svg class="w-full h-full text-slate-800" fill="none" viewBox="0 0 100 100" preserveAspectRatio="none">
        <defs>
           <pattern id="grid-hero" width="8" height="8" patternUnits="userSpaceOnUse">
              <path d="M 8 0 L 0 0 0 8" fill="none" stroke="currentColor" stroke-width="0.05"/>
           </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#grid-hero)" />
     </svg>
  </div>

  <div class="container mx-auto px-6 md:px-12 relative z-10 grid grid-cols-1 lg:grid-cols-12 gap-12 items-center h-full">
    
    <!-- LEFT COLUMN: Copy & Trust (Span 7/12) -->
    <div class="reveal col-span-1 lg:col-span-7 flex flex-col justify-center h-full pt-10 lg:pt-0">
      
      <!-- Badge -->
      <div class="inline-flex self-start items-center gap-2 px-4 py-1.5 rounded-full border border-blue-500/20 bg-blue-500/5 backdrop-blur-md mb-10 transition-all hover:border-blue-500/40">
        <span class="w-1.5 h-1.5 rounded-full bg-blue-400 animate-pulse"></span>
        <span class="text-[10px] font-mono text-blue-300 font-bold uppercase tracking-[0.2em]">Construction Risk Assurance</span>
      </div>

      <h1 class="mb-8 drop-shadow-2xl text-4xl sm:text-5xl md:text-7xl lg:text-[5.5rem] font-bold tracking-tight text-white leading-[1.1] max-w-4xl">
        Offshore Economics. <br/>
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 via-blue-200 to-white">Domestic Guarantee.</span>
      </h1>
      
      <p class="text-lg md:text-xl text-slate-400 font-light max-w-2xl mb-12 leading-relaxed">
        A modern approach to metal fabrication that pairs <strong class="text-slate-200 font-medium">low-cost global production</strong> with a <strong class="text-slate-200 font-medium">local GTA factory</strong>. <br class="hidden md:block" />We manufacture for budget, but guarantee the schedule from Toronto.
      </p>

      <div class="flex flex-col sm:flex-row gap-5 mb-24">
        <Button href="#contact" variant="primary" class="h-14 px-8 text-base shadow-[0_0_40px_rgba(37,99,235,0.2)] hover:shadow-[0_0_60px_rgba(37,99,235,0.4)] transition-all duration-500">
          Get a Risk-Free Estimate
        </Button>
        <Button href="#services" variant="outline" class="h-14 px-8 text-base border-slate-800 bg-slate-900/50 hover:bg-slate-800 hover:border-slate-700 text-slate-300">
          See Our Capacity
        </Button>
      </div>

      <!-- Trust Bar -->
      <div class="border-t border-white/5 pt-10 mt-auto lg:mt-0">
        <span class="text-[10px] font-mono text-slate-500 uppercase tracking-[0.2em] block mb-6">Trusted by Tier 1 Teams</span>
        <div class="flex flex-wrap gap-x-12 gap-y-6 opacity-40 grayscale transition-all duration-500 hover:grayscale-0 hover:opacity-100">
            <span class="font-bold text-xl tracking-tight text-white cursor-default">PCL</span>
            <span class="font-bold text-xl tracking-tight text-white cursor-default">ELLISDON</span>
            <span class="font-bold text-xl tracking-tight text-white cursor-default">MULTIPLEX</span>
            <span class="font-bold text-xl tracking-tight text-white cursor-default">BIRD</span>
        </div>
      </div>
    </div>

    <!-- RIGHT COLUMN: Wireframe Globe Visual (Span 5/12) -->
    <div class="relative col-span-1 lg:col-span-5 h-[600px] w-full flex items-center justify-center perspective-[2000px] group hidden lg:flex pointer-events-none">
        
        <!-- The Globe Container -->
        <div class="relative w-[500px] h-[500px] transform-style-3d animate-spin-slow-globe">
            
            <!-- Longitude Rings (Vertical) -->
            <div class="absolute inset-0 rounded-full border-2 border-blue-400/30 transform rotate-y-0 shadow-[0_0_15px_rgba(96,165,250,0.2)]"></div>
            <div class="absolute inset-0 rounded-full border border-blue-400/30 transform rotate-y-30"></div>
            <div class="absolute inset-0 rounded-full border border-blue-400/30 transform rotate-y-60"></div>
            <div class="absolute inset-0 rounded-full border border-blue-400/30 transform rotate-y-90"></div>
            <div class="absolute inset-0 rounded-full border border-blue-400/30 transform rotate-y-120"></div>
            <div class="absolute inset-0 rounded-full border border-blue-400/30 transform rotate-y-150"></div>

            <!-- Latitude Rings (Horizontal - Ellipses) -->
            <div class="absolute top-[15%] left-[15%] right-[15%] bottom-[15%] rounded-full border border-blue-300/30 transform rotate-x-75"></div>
            <div class="absolute top-[30%] left-[10%] right-[10%] bottom-[30%] rounded-full border border-blue-300/30 transform rotate-x-75"></div>
            <div class="absolute inset-0 rounded-full border-2 border-blue-400/60 transform rotate-x-75 shadow-[0_0_60px_rgba(59,130,246,0.4)]"></div> <!-- Equator -->
            
            <!-- Glowing Core -->
            <div class="absolute inset-32 bg-blue-500/20 rounded-full blur-xl animate-pulse"></div>
            
            <!-- Canada Marker (Abstract) -->
            <div class="absolute top-[28%] left-[25%] w-2 h-2 bg-white rounded-full shadow-[0_0_30px_white] animate-ping-slow transform translate-z-10"></div>
            <div class="absolute top-[28%] left-[25%] w-2 h-2 bg-white rounded-full shadow-[0_0_30px_white] transform translate-z-10"></div>

        </div>

        <!-- Floating UI Elements (Minimalist Data Texture) -->
        <div class="absolute top-1/3 right-10 transform translate-x-6 animate-float-delayed">
            <div class="bg-slate-900/60 border border-blue-400/20 px-4 py-2 rounded backdrop-blur-md flex items-center gap-3 shadow-[0_0_30px_rgba(59,130,246,0.1)]">
                <div class="w-1.5 h-1.5 bg-green-400 rounded-full animate-ping"></div>
                <div class="text-[10px] font-mono text-blue-100 tracking-widest uppercase text-shadow">Production: Active</div>
            </div>
        </div>

        <div class="absolute bottom-1/3 left-0 transform -translate-x-6 animate-float">
            <div class="bg-slate-900/60 border border-blue-400/20 px-4 py-2 rounded backdrop-blur-md flex items-center gap-3 shadow-[0_0_30px_rgba(59,130,246,0.1)]">
                <div class="w-1.5 h-1.5 bg-blue-400 rounded-full"></div>
                <div class="text-[10px] font-mono text-blue-100 tracking-widest uppercase text-shadow">Hub: Toronto, ON</div>
            </div>
        </div>

        <!-- Decorative Glow Behind -->
        <div class="absolute inset-0 bg-blue-500/10 blur-[100px] rounded-full pointer-events-none -z-10"></div>

    </div>

  </div>

  <!-- The Reality Check / Hazard Strip -->
  <div class="absolute bottom-0 left-0 right-0 h-16 bg-blue-950/20 border-t border-blue-500/10 backdrop-blur flex items-center overflow-hidden z-20">
      <div class="flex animate-marquee whitespace-nowrap gap-16 text-blue-400/60 font-mono text-xs uppercase tracking-[0.3em]">
          <span>Global Capacity</span>
          <span>//</span>
          <span>Local Assurance</span>
          <span>//</span>
          <span>Managed Risk</span>
          <span>//</span>
          <span>On-Time Delivery</span>
          <span>//</span>
          <span>Global Capacity</span>
          <span>//</span>
          <span>Local Assurance</span>
          <span>//</span>
          <span>Managed Risk</span>
          <span>//</span>
          <span>On-Time Delivery</span>
      </div>
      <!-- Fade Out Gradients -->
      <div class="absolute left-0 top-0 bottom-0 w-32 bg-gradient-to-r from-slate-950 to-transparent z-30"></div>
      <div class="absolute right-0 top-0 bottom-0 w-32 bg-gradient-to-l from-slate-950 to-transparent z-30"></div>
  </div>

</section>

<style>
  .perspective-[2000px] { perspective: 2000px; }
  .transform-style-3d { transform-style: preserve-3d; }
  .rotate-y-0 { transform: rotateY(0deg); }
  .rotate-y-30 { transform: rotateY(30deg); }
  .rotate-y-60 { transform: rotateY(60deg); }
  .rotate-y-90 { transform: rotateY(90deg); }
  .rotate-y-120 { transform: rotateY(120deg); }
  .rotate-y-150 { transform: rotateY(150deg); }
  .rotate-x-75 { transform: rotateX(75deg); }
  .translate-z-10 { transform: translateZ(60px); }

  @keyframes spin-slow-globe {
    from { transform: rotateY(0deg) rotateX(15deg); }
    to { transform: rotateY(360deg) rotateX(15deg); }
  }
  .animate-spin-slow-globe { animation: spin-slow-globe 40s linear infinite; }

  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }
  @keyframes float-delayed {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(10px); }
  }
  .animate-float { animation: float 8s ease-in-out infinite; }
  .animate-float-delayed { animation: float-delayed 10s ease-in-out infinite; }
  
  @keyframes marquee {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }
  .animate-marquee { animation: marquee 30s linear infinite; }
</style>

  </div>
</section>

