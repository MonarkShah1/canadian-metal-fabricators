    <!-- Industries Grid -->
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-8 text-center opacity-70 hover:opacity-100 transition duration-300">
      {industries.map(industry => (
        <div class="group cursor-default">
