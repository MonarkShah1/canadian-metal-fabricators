---
import iconSimplified from '../assets/icon-simplified.svg';
import iconThink from '../assets/icon-think.svg';
import iconReliability from '../assets/icon-reliability.svg';

const trustSignals = [
  {
    icon: iconReliability.src,
    title: "CWB W47.1 Certified",
    description: "Our domestic facility is fully certified for structural welding. No code issues on site. We weld to Canadian Standards."
  },
  {
    icon: iconThink.src,
    title: "ISO 9001:2015",
    description: "A rigorous quality management system governing both our offshore and local production. Traceability from mill to site."
  },
  {
    icon: iconSimplified.src,
    title: "100% On-Time Guarantee",
    description: "Backed by our domestic machine shop. If the boat is late, we make it here. You never wait."
  }
];
---

<section class="py-24 bg-slate-950 relative overflow-hidden border-t border-slate-900">
    <!-- Background Glow -->
    <div class="absolute top-0 right-0 w-[500px] h-[500px] bg-primary/5 rounded-full blur-3xl pointer-events-none"></div>

  <div class="container mx-auto px-6 md:px-12 relative z-10">
    <div class="text-center max-w-3xl mx-auto mb-16 reveal">
      <h2 class="mb-6 font-montserrat font-bold text-3xl md:text-4xl text-white">
        Built on Certified Capacity.
      </h2>
      <p class="text-slate-400">
        We don't just broker metal. We are a certified Canadian manufacturer.
      </p>
    </div>

    <!-- Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-20 reveal">
      {trustSignals.map(signal => (
        <div class="flex flex-col items-center text-center p-8 rounded-3xl bg-slate-900 border border-slate-800 hover:border-primary/50 transition duration-300 group shadow-lg">
          <div class="w-16 h-16 bg-slate-800 rounded-2xl flex items-center justify-center mb-6 text-primary border border-slate-700 group-hover:scale-110 transition duration-500">
            <img src={signal.icon} alt={signal.title} class="w-8 h-8 invert opacity-80 group-hover:opacity-100 transition" />
          </div>
          <h3 class="text-xl font-bold mb-4 text-white">{signal.title}</h3>
          <p class="text-slate-400 text-sm leading-relaxed">
            {signal.description}
          </p>
        </div>
      ))}
    </div>

    <!-- Stat Bar -->
    <div class="grid grid-cols-1 md:grid-cols-3 divide-y md:divide-y-0 md:divide-x divide-slate-800 border-t border-b border-slate-800 py-12 bg-slate-900/50 rounded-2xl reveal delay-100">
        <div class="text-center px-4 py-4">
            <div class="text-4xl font-bold text-white mb-2">0</div>
            <div class="text-xs font-mono text-slate-500 uppercase tracking-widest">Liquidated Damages Paid</div>
        </div>
        <div class="text-center px-4 py-4">
            <div class="text-4xl font-bold text-white mb-2">40k</div>
            <div class="text-xs font-mono text-slate-500 uppercase tracking-widest">Sq. Ft. Domestic Facility</div>
        </div>
        <div class="text-center px-4 py-4">
            <div class="text-4xl font-bold text-white mb-2">15+</div>
            <div class="text-xs font-mono text-slate-500 uppercase tracking-widest">Years Construction Exp.</div>
        </div>
    </div>

  </div>
</section>
