---
import iconSimplified from '../assets/icon-simplified.svg';
import iconThink from '../assets/icon-think.svg';
import iconReliability from '../assets/icon-reliability.svg';

const features = [
  {
    icon: iconSimplified.src,
    title: "Manufacturing Simplified",
    description: "One partner for everything. From rapid prototyping in Ontario to high-volume global production. We handle the logistics; you get the parts."
  },
  {
    icon: iconThink.src,
    title: "Think Like an OEM",
    description: "We understand procurement. Guaranteed supply, fixed pricing models, and ISO 9001:2015 quality assurance embedded in every step."
  },
  {
    icon: iconReliability.src,
    title: "Unshakeable Reliability",
    description: "Risk-insured supply chain. If global shipping falters, our domestic facility in the GTA automatically takes over production."
  }
];
---

<section class="py-24 bg-slate-950 relative overflow-hidden">
    <!-- Background Glow -->
    <div class="absolute top-0 right-0 w-[500px] h-[500px] bg-primary/10 rounded-full blur-3xl pointer-events-none"></div>

  <div class="container mx-auto px-6 md:px-12 relative z-10">
    <div class="text-center max-w-3xl mx-auto mb-16 reveal">
      <h2 class="mb-6">
        Why OEMs Choose Canadian Metal Fabricators
      </h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-12 reveal">
      {features.map(feature => (
        <div class="flex flex-col items-center text-center p-8 rounded-3xl glass hover:bg-slate-900/50 transition duration-300 group">
          <div class="w-20 h-20 bg-slate-800/80 rounded-2xl flex items-center justify-center mb-6 text-primary border border-slate-700 group-hover:border-primary/50 group-hover:scale-110 transition duration-500">
            <img src={feature.icon} alt={feature.title} class="w-10 h-10 invert opacity-80 group-hover:opacity-100 transition" />
          </div>
          <h3 class="text-2xl mb-4 text-white group-hover:text-primary transition">{feature.title}</h3>
          <p class="text-slate-400 leading-relaxed">
            {feature.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
