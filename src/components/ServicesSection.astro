--- 
import ServiceCard from './ui/ServiceCard.astro';

const capabilities = [
  {
    title: "Value Engineering",
    description: "DFM analysis and CAD modeling to optimize parts for mass production.",
    iconPath: "M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z", // Cog/Drafting
    capacity: "SolidWorks / AutoCAD"
  },
  {
    title: "Material Sourcing",
    description: "Direct mill purchasing of Steel, Aluminum, and Stainless. Global purchasing power.",
    iconPath: "M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4", // Cube
    capacity: "Coil & Sheet"
  },
  {
    title: "Laser Cutting",
    description: "High-speed fiber lasers for precision profiling of sheet and plate up to 1 inch.",
    iconPath: "M13 10V3L4 14h7v7l9-11h-7z", // Lightning/Laser
    capacity: "Fiber Laser Systems"
  },
  {
    title: "Precision Bending",
    description: "Complex forming with multi-axis press brakes. Zero-springback technology.",
    iconPath: "M4 6h16M4 12h16M4 18h7", // Lines/Sheet
    capacity: "7-Axis Press Brakes"
  },
  {
    title: "Certified Welding (CWB/AWS)",
    description: "Certified MIG/TIG welding for both high-strength structural and precision cosmetic applications.",
    iconPath: "M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z", // Flame
    capacity: "W47.1 Certified"
  },
  {
    title: "Surface Finishing",
    description: "Powder coating, zinc plating, anodizing, and passivation managed to ASTM specs.",
    iconPath: "M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01", // Paint bucket/Drop
    capacity: "ASTM Standards"
  },
  {
    title: "Assembly & Kitting",
    description: "Full electro-mechanical assembly and custom packaging ready for site.",
    iconPath: "M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4", // Box/Kit
    capacity: "Turnkey Solution"
  }
];
---

<section id="services" class="pt-32 pb-24 bg-slate-950 border-t border-slate-900 relative overflow-hidden">
  
  <!-- Receiving Connector Node (Sitting on Top Border) -->
  <div class="absolute top-0 left-1/2 -translate-x-1/2 -translate-y-1/2 w-3 h-3 bg-slate-900 border border-slate-700 rounded-full z-20 flex items-center justify-center shadow-[0_0_10px_rgba(0,0,0,0.5)]">
    <div class="w-1 h-1 bg-slate-500 rounded-full"></div>
  </div>

  <!-- Background Grid -->
  <div class="absolute inset-0 z-0 opacity-10 pointer-events-none">
        <svg class="w-full h-full text-slate-700" fill="none">
        <defs>
            <pattern id="grid-services" width="40" height="40" patternUnits="userSpaceOnUse">
                <path d="M 40 0 L 0 0 0 40" fill="none" stroke="currentColor" stroke-width="0.5"/>
            </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#grid-services)" />
        </svg>
  </div>

  <div class="container mx-auto px-6 md:px-12 relative z-10">

    <div class="text-center max-w-4xl mx-auto mb-20 reveal">
      <span class="font-mono text-blue-500 text-sm tracking-widest uppercase mb-4 block">Integrated Capabilities</span>
      <h2 class="font-montserrat font-bold text-4xl mb-6 text-white">Production Ecosystem.</h2>
      <p class="text-slate-400 text-lg">
        Scalable manufacturing solutions designed for complexity. We seamlessly integrate high-volume offshore production with rapid domestic finishing to deliver the optimal balance of cost and speed.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 reveal">
      
      {capabilities.map(cap => (
        <div class="bg-slate-900/80 backdrop-blur-sm border border-slate-800 p-6 rounded-xl hover:border-blue-500/50 transition duration-300 group">
            <div class="flex justify-between items-start mb-4">
                <div class="w-10 h-10 bg-slate-800 rounded-lg flex items-center justify-center border border-slate-700 group-hover:border-blue-500/50 group-hover:bg-blue-500/10 transition">
                    <svg class="w-5 h-5 text-slate-400 group-hover:text-blue-400 transition" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={cap.iconPath} />
                    </svg>
                </div>
                <div class="text-[10px] font-mono text-slate-500 border border-slate-700 px-2 py-1 rounded bg-slate-950 group-hover:text-blue-400 group-hover:border-blue-500/30 transition">
                    {cap.capacity}
                </div>
            </div>
            <h3 class="text-lg font-bold text-white mb-2 font-mono group-hover:text-blue-400 transition">{cap.title}</h3>
            <p class="text-sm text-slate-400 leading-relaxed">{cap.description}</p>
        </div>
      ))}

      <!-- CTA Card -->
      <div class="bg-blue-600 p-6 rounded-xl border border-blue-500 flex flex-col justify-center items-center text-center group cursor-pointer hover:bg-blue-500 transition duration-300 relative overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-br from-white/10 to-transparent opacity-0 group-hover:opacity-100 transition"></div>
        <h3 class="text-xl font-bold text-white mb-2 relative z-10">Need a Quote?</h3>
        <p class="text-blue-100 text-sm mb-6 relative z-10">Upload your drawings for a rapid estimate.</p>
        <a href="#contact" class="bg-white text-blue-600 px-6 py-2 rounded-lg font-bold text-sm hover:bg-slate-100 transition shadow-lg relative z-10">
            Start Project
        </a>
      </div>

    </div>
    
  </div>
</section>