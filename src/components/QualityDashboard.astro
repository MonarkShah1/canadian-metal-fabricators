<section class="bg-slate-900 py-16 text-white border-t border-slate-800">
  <div class="container mx-auto px-6 md:px-20">
    
    <div class="flex flex-col md:flex-row items-end justify-between gap-6 mb-12">
        <div>
            <span class="font-mono text-blue-400 text-sm tracking-widest uppercase mb-2 block">Performance Metrics (Q3 2025)</span>
            <h2 class="font-montserrat font-bold text-3xl">Engineering Transparency</h2>
        </div>
        <p class="font-poppins text-slate-400 max-w-xl text-right">
            We don't just promise quality; we track it. Our live KPIs demonstrate the stability of our hybrid supply chain.
        </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        
        <!-- KPI Card 1: OTD -->
        <div class="bg-slate-800/50 p-6 rounded-lg border border-slate-700 backdrop-blur-sm">
            <div class="font-mono text-sm text-slate-400 mb-2">ON-TIME DELIVERY (OTD)</div>
            <div class="font-mono text-4xl font-bold text-green-400 mb-2">99.4%</div>
            <div class="h-1 w-full bg-slate-700 rounded-full overflow-hidden">
                <div class="h-full bg-green-400 w-[99.4%]"></div>
            </div>
            <p class="text-xs text-slate-500 mt-3">Target: 98.0% | 12-Month Rolling Avg</p>
        </div>

        <!-- KPI Card 2: PPM -->
        <div class="bg-slate-800/50 p-6 rounded-lg border border-slate-700 backdrop-blur-sm">
            <div class="font-mono text-sm text-slate-400 mb-2">DEFECT RATE (PPM)</div>
            <div class="font-mono text-4xl font-bold text-blue-400 mb-2">&lt; 500</div>
             <p class="text-xs text-slate-500 mt-3">Industry Avg: 1,200 | ISO 9001 Standard</p>
        </div>

        <!-- KPI Card 3: Capacity -->
        <div class="bg-slate-800/50 p-6 rounded-lg border border-slate-700 backdrop-blur-sm">
            <div class="font-mono text-sm text-slate-400 mb-2">AVAILABLE CAPACITY</div>
            <div class="flex items-end gap-2">
                <div class="font-mono text-4xl font-bold text-white mb-2">10kW</div>
                <span class="text-slate-400 mb-4 text-sm">Fiber Laser</span>
            </div>
            <p class="text-xs text-slate-500 mt-1">24/7 Shifts Operational (GTA Facility)</p>
        </div>

        <!-- KPI Card 4: Certs -->
        <div class="bg-slate-800/50 p-6 rounded-lg border border-slate-700 backdrop-blur-sm flex flex-col justify-between">
            <div class="font-mono text-sm text-slate-400 mb-2">VALIDATED CERTIFICATIONS</div>
            <div class="flex flex-col gap-2">
                <div class="flex items-center gap-2 text-white font-semibold">
                    <span class="text-green-400">✓</span> ISO 9001:2015
                </div>
                <div class="flex items-center gap-2 text-white font-semibold">
                    <span class="text-green-400">✓</span> CWB W47.1
                </div>
                <div class="flex items-center gap-2 text-white font-semibold">
                    <span class="text-green-400">✓</span> CGP Registered
                </div>
            </div>
        </div>

    </div>

  </div>
</section>
