---
import Button from './ui/Button.astro';
---

<section id="contact" class="py-24 bg-slate-950 relative overflow-hidden border-t border-slate-900">
  
  <!-- Blueprint Grid Background -->
  <div class="absolute inset-0 z-0 opacity-10 pointer-events-none">
        <svg class="w-full h-full text-slate-600" fill="none">
        <defs>
            <pattern id="grid-contact" width="20" height="20" patternUnits="userSpaceOnUse">
                <path d="M 20 0 L 0 0 0 20" fill="none" stroke="currentColor" stroke-width="0.5"/>
            </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#grid-contact)" />
        </svg>
  </div>

  <div class="container mx-auto px-6 md:px-12 relative z-10">
    <div class="bg-slate-950 border border-slate-800 flex flex-col lg:flex-row max-w-5xl mx-auto">
      
      <!-- Left Side: The Pitch (Visual) -->
      <div class="lg:w-2/5 p-12 bg-slate-950 border-r border-slate-800 flex flex-col justify-between relative">
        
        <div>
            <span class="text-blue-500 text-xs font-bold uppercase mb-6 block tracking-widest">Request for Quote</span>
            <h3 class="text-4xl md:text-5xl font-bold text-white mb-6 leading-none tracking-tighter">
                SUBMIT<br/>
                DRAWING<br/>
                PACKAGE.
            </h3>
            <p class="text-slate-400 text-sm leading-relaxed mb-8 font-normal max-w-xs">
                We provide a dual-source quote: <strong>Offshore Volume</strong> for budget + <strong>Domestic Speed</strong> for schedule. 48-hour turnaround.
            </p>
        </div>

        <!-- Visual: Industrial Abstraction -->
        <div class="relative h-32 w-full mt-8 border-t border-slate-800 pt-8">
            <div class="flex items-center gap-4">
                <div class="w-12 h-12 bg-slate-900 border border-slate-700 flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="square" stroke-linejoin="miter" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" /></svg>
                </div>
                <div class="text-xs font-medium text-slate-500 uppercase tracking-wide">
                    <div class="mb-1">Secure Upload</div>
                    <div class="text-blue-500">Encryption: Active</div>
                </div>
            </div>
        </div>

        <div class="mt-auto pt-8 text-[10px] text-slate-600 font-bold uppercase tracking-widest">
            <p>ISO 27001 Information Security Standard</p>
        </div>
      </div>

      <!-- Right Side: The Spec Form -->
      <div class="lg:w-3/5 p-12 bg-slate-950">
        <div class="flex justify-between items-center mb-10 border-b border-slate-800 pb-4">
            <h4 class="text-white font-bold uppercase tracking-widest text-xs">RFQ Specification</h4>
            <div class="text-[10px] font-medium text-slate-500">REF: 2025-WEB</div>
        </div>

        <form class="space-y-8">
          
          <!-- Input Group -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div class="group">
              <label class="block text-[10px] font-bold text-slate-500 uppercase mb-2 tracking-wider">Full Name</label>
              <input type="text" class="w-full bg-slate-900 border border-slate-800 text-white px-4 py-3 focus:outline-none focus:border-blue-500 transition placeholder-slate-700 text-sm rounded-none font-medium" placeholder="Enter Name" />
            </div>
            <div class="group">
              <label class="block text-[10px] font-bold text-slate-500 uppercase mb-2 tracking-wider">Work Email</label>
              <input type="email" class="w-full bg-slate-900 border border-slate-800 text-white px-4 py-3 focus:outline-none focus:border-blue-500 transition placeholder-slate-700 text-sm rounded-none font-medium" placeholder="Enter Email" />
            </div>
          </div>

          <div class="group">
              <label class="block text-[10px] font-bold text-slate-500 uppercase mb-2 tracking-wider">Project Name / Location</label>
              <input type="text" class="w-full bg-slate-900 border border-slate-800 text-white px-4 py-3 focus:outline-none focus:border-blue-500 transition placeholder-slate-700 text-sm rounded-none font-medium" placeholder="e.g. 45 The Esplanade" />
          </div>

          <!-- Scope Checkboxes -->
          <div>
              <label class="block text-[10px] font-bold text-slate-500 uppercase mb-4 tracking-wider">Scope of Work</label>
              <div class="grid grid-cols-2 gap-4">
                  <label class="flex items-center gap-3 cursor-pointer group">
                      <div class="w-4 h-4 border border-slate-700 flex items-center justify-center group-hover:border-blue-500 transition bg-slate-900">
                          <input type="checkbox" class="appearance-none w-2 h-2 bg-blue-500 opacity-0 checked:opacity-100 transition" />
                      </div>
                      <span class="text-xs font-medium text-slate-400 group-hover:text-white transition uppercase tracking-wide">Railings & Guards</span>
                  </label>
                  <label class="flex items-center gap-3 cursor-pointer group">
                      <div class="w-4 h-4 border border-slate-700 flex items-center justify-center group-hover:border-blue-500 transition bg-slate-900">
                          <input type="checkbox" class="appearance-none w-2 h-2 bg-blue-500 opacity-0 checked:opacity-100 transition" />
                      </div>
                      <span class="text-xs font-medium text-slate-400 group-hover:text-white transition uppercase tracking-wide">Stairs & Stringers</span>
                  </label>
                  <label class="flex items-center gap-3 cursor-pointer group">
                      <div class="w-4 h-4 border border-slate-700 flex items-center justify-center group-hover:border-blue-500 transition bg-slate-900">
                          <input type="checkbox" class="appearance-none w-2 h-2 bg-blue-500 opacity-0 checked:opacity-100 transition" />
                      </div>
                      <span class="text-xs font-medium text-slate-400 group-hover:text-white transition uppercase tracking-wide">Structural Embeds</span>
                  </label>
                  <label class="flex items-center gap-3 cursor-pointer group">
                      <div class="w-4 h-4 border border-slate-700 flex items-center justify-center group-hover:border-blue-500 transition bg-slate-900">
                          <input type="checkbox" class="appearance-none w-2 h-2 bg-blue-500 opacity-0 checked:opacity-100 transition" />
                      </div>
                      <span class="text-xs font-medium text-slate-400 group-hover:text-white transition uppercase tracking-wide">Custom Fab</span>
                  </label>
              </div>
          </div>

          <!-- Upload Area -->
          <div class="border border-dashed border-slate-700 bg-slate-900/50 p-8 text-center hover:border-blue-500 transition cursor-pointer group">
              <span class="text-xs font-bold text-slate-500 group-hover:text-blue-400 transition uppercase tracking-widest">Upload Drawings (.PDF / .DWG)</span>
          </div>

          <div class="flex justify-start">
            <button type="submit" class="bg-blue-600 text-white font-bold text-xs px-10 py-4 hover:bg-blue-500 transition shadow-lg shadow-blue-500/20 flex items-center gap-2 uppercase tracking-widest rounded-none">
                Request Quote
            </button>
          </div>
          
        </form>
      </div>

    </div>
  </div>
</section>
