---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import Button from '../../components/ui/Button.astro';

export async function getStaticPaths() {
  const locationEntries = await getCollection('locations');
  return locationEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Layout 
  title={entry.data.title} 
  description={entry.data.description}
  canonicalURL={`https://cmfab.ca/locations/${entry.slug}`}
>
  <Navbar />
  
  <main class="pt-20">
    <!-- Local Hero -->
    <section class="bg-primary text-white py-20 px-6 md:px-20 relative overflow-hidden">
        <div class="relative z-10 max-w-4xl mx-auto text-center">
            <h1 class="font-montserrat font-bold text-4xl md:text-6xl mb-6">
                Metal Fabrication in <span class="text-yellow-400">{entry.data.city}</span>
            </h1>
            <p class="font-poppins text-xl opacity-90 mb-8 max-w-2xl mx-auto">
                {entry.data.description}
            </p>
            <div class="flex justify-center gap-4">
                <Button href="#contact" variant="outline">Request a Site Visit</Button>
            </div>
        </div>
    </section>

    <div class="container mx-auto px-6 md:px-20 py-16 grid grid-cols-1 lg:grid-cols-2 gap-16">
        
        <!-- Content Column -->
        <article class="prose prose-lg prose-blue max-w-none font-poppins text-gray-700">
            <Content />
        </article>

        <!-- Map / Local Signal Column -->
        <aside class="space-y-8">
            <!-- Map Placeholder -->
            <div class="bg-gray-200 w-full h-80 rounded-2xl flex items-center justify-center text-gray-500 font-semibold shadow-inner">
                <!-- In production, use Google Maps Embed API here with entry.data.coordinates -->
                <div class="text-center">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 mx-auto mb-2 text-primary">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
                    </svg>
                    <p>Map Area: {entry.data.city}</p>
                    <p class="text-sm font-mono mt-2">Lat: {entry.data.coordinates.lat}, Lng: {entry.data.coordinates.lng}</p>
                </div>
            </div>

            <!-- NAP (Name, Address, Phone) Card - Critical for Local SEO -->
            <div class="bg-gray-50 border border-gray-200 p-8 rounded-2xl">
                <h3 class="font-montserrat font-bold text-xl mb-4 text-black">Service Area Contact</h3>
                <ul class="space-y-4 font-poppins text-gray-700">
                    <li class="flex items-start gap-3">
                        <span class="font-semibold w-20">Address:</span>
                        <span>123 Manufacturing Blvd,<br/>Serving {entry.data.city} & GTA</span>
                    </li>
                    <li class="flex items-center gap-3">
                        <span class="font-semibold w-20">Phone:</span>
                        <a href="tel:+14165550123" class="text-primary hover:underline">+1 (416) 555-0123</a>
                    </li>
                    <li class="flex items-center gap-3">
                        <span class="font-semibold w-20">Email:</span>
                        <a href="mailto:sales@cmfab.ca" class="text-primary hover:underline">sales@cmfab.ca</a>
                    </li>
                </ul>
            </div>
        </aside>
    </div>

    <!-- Local Call to Action -->
    <section class="bg-gray-900 text-white py-16 text-center">
        <div class="container mx-auto px-6">
            <h2 class="font-montserrat font-bold text-3xl mb-4">Ready to simplify your supply chain?</h2>
            <p class="mb-8 text-gray-400">Get a quote for your {entry.data.city} project today.</p>
            <Button href="#contact" variant="primary">Start Your Quote</Button>
        </div>
    </section>

  </main>
  <Footer />
</Layout>
